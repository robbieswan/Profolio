        "@types/express": "^4.17.17",
        "@types/node": "^20.1.2",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "path": "^0.12.7",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "devDependencies": {
        "copyfiles": "^2.4.1"
    }
}
