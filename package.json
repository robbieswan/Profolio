{
    "name": "profolio",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "node ./dist/server.js",
        "build": "npx tsc",
        "build-cp": "npx tsc && npm run copy-files-npx",
        "copy-files-npx": "npm run cp-css && npm run cp-html && npm run cp-views",
        "cp-css": "npx copyfiles -u 3 src/public/css/**.css dist/public/css",
        "cp-html": "npx copyfiles -u 3 src/public/html/**.html dist/public/html",
        "cp-views": "npx copyfiles -u 3 src/public/views/**.ejs dist/public/views",
        "copy-files": "xcopy .\\src\\public dist\\public /s /e"
    },
    "author": "Tyler S",
